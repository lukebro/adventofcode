{
	"compilerOptions": {
		"strict": false,
		"noEmit": true,
		"allowJs": true,
		"target": "ESNext",
		"esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@lib/*": ["./lib/*"]
		}
	},
	"include": ["./**/*"],
	"exclude": ["**/node_modules/**/*"]
}
